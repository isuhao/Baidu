<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/dk_ll_numberbox"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:visibility="gone"
    android:orientation="vertical" >

    <GridView
        android:id="@+id/dk_list_mynumberbox"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp"
        android:cacheColorHint="#00000000"
        android:divider="@null"
        android:verticalSpacing="10dp"
        android:fadingEdge="none"
        android:numColumns="1"
        android:listSelector="@color/dk_transparent"
        android:scrollbarThumbVertical="@drawable/dk_scrollbar_gray"
        android:scrollbars="vertical"
         />



    <LinearLayout
        android:id="@+id/dk_layout_box_no_history"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:gravity="center"
        android:layout_gravity="center"
        android:orientation="vertical"
        android:visibility="gone" >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/dk_ic_numberbox_no_recode" />
        <Button
            android:id="@+id/bd_btn_intent01"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@drawable/dk_btn_selector_intent"
            android:textColor="@drawable/dk_btn_textcolor_selector"
            android:text="去星玩家看看" />

        <include
            android:id="@+id/dk_custom_bottom0"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_marginTop="12dp"
            android:layout_weight="1"
            layout="@layout/dk_user_bottom_logo"
            android:visibility="gone" />
    </LinearLayout>

</LinearLayout>
